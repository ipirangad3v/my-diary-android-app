# .editorconfig
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
indent_size = 4
# Continua as regras do ktlint/Android
ktlint_standard = disabled
ktlint_official = enabled
max_line_length = 120