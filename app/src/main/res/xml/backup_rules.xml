<?xml version="1.0" encoding="utf-8"?>
<!-- Rules for the Auto Backup system on Android versions 6.0 (API 23) to 11 (API 30). This file explicitly defines what
    data should be included in the cloud backup. See https://developer.android.com/guide/topics/data/autobackup for details. -->
<full-backup-content>
    <!-- Include the specific SharedPreferences file that stores the encrypted master password. -->
    <include domain="sharedpref" path="diary_prefs.xml" />
    <!-- Include all files stored in the app's private file directory (our encrypted diary entries). -->
    <include domain="file" path="." />
</full-backup-content>
